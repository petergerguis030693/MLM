<%- contentFor('css') %>
    <link href="assets/vendor/owl-carousel/owl.carousel.css" rel="stylesheet">
    <link rel="stylesheet" href="assets/vendor/nouislider/nouislider.min.css">
    <%- contentFor('body') %>
        <div class="content-body default-height">
            <div class="container-fluid py-4">
                <div class="row">
                    <div class="col-12">
                        <h2 class="mb-4 text-center">
                            <%= headerTitle %>
                        </h2>

                        <div class="table-responsive">
                            <table class="table table-striped table-bordered text-center align-middle bg-white">
                                <thead class="table-light">
                                    <tr>
                                        <th>ID</th>
                                        <th>Name</th>
                                        <th>E-Mail</th>
                                        <th>Status</th>
                                        <th>Aktionen</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% partners.forEach(partner=> { %>
                                        <tr>
                                            <td>
                                                <%= partner.id %>
                                            </td>
                                            <td>
                                                <%= partner.name %>
                                            </td>
                                            <td>
                                                <%= partner.email %>
                                            </td>
                                            <td>
                                                <% if (partner.is_active) { %>
                                                    <span class="text-success">Aktiv</span>
                                                    <% } else { %>
                                                        <span class="text-danger">Gesperrt</span>
                                                        <% } %>
                                            </td>
                                            <td>
                                                <a href="/admin/partner/<%= partner.id %>"
                                                    class="btn btn-sm btn-primary">Profil</a>

                                                <form action="/admin/partner/<%= partner.id %>/toggle-status"
                                                    method="POST" class="d-inline">
                                                    <button type="submit" class="btn btn-sm btn-warning">
                                                        <% if (partner.is_active) { %> Sperren <% } else { %> Entsperren
                                                                <% } %>
                                                    </button>
                                                </form>

                                                <form action="/admin/partner/<%= partner.id %>/delete" method="POST"
                                                    class="d-inline">
                                                    <button type="submit" class="btn btn-sm btn-danger"
                                                        onclick="return confirm('Bist du sicher?')">
                                                        LÃ¶schen
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                        <% }) %>
                                </tbody>

                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <%- contentFor('script') %>
        <script src="/assets/js/custom.min.js"></script>
        <script src="/assets/js/dlabnav-init.js"></script>
        <script src="/assets/js/demo.js"></script>